<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center">

    <View
        android:id="@+id/mid"
        app:layout_constraintTop_toTopOf="@id/day_number"
        app:layout_constraintBottom_toBottomOf="@id/day_number"
        app:layout_constraintStart_toStartOf="@id/day_number"
        app:layout_constraintEnd_toEndOf="@id/day_number"
        android:layout_width="1dp"
        android:layout_height="1dp"/>

    <View
        android:id="@+id/vStart"
        app:layout_constraintEnd_toStartOf="@id/mid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <View
        android:id="@+id/vEnd"
        app:layout_constraintStart_toEndOf="@id/mid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="5dp"
        android:paddingHorizontal="6dp"
        android:id="@+id/day_number"
        android:textColor="#979797"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>